




{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .btn-home {
            background-color: #FFA100;
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 50px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 4px 15px rgba(255, 161, 0, 0.3);
        }
        .btn-home:hover {
            background-color: #cc8100;
            transform: translateY(-2px);
        }


        @media (max-width: 768px) {
            html, body {
                overflow-x: hidden;
                overflow-y: auto !important;
                height: auto !important;
                min-height: 100vh;
                -webkit-overflow-scrolling: touch;
            }
            .reservation-container {
                flex-direction: column;
                height: auto;
                overflow: visible;
            }
            .sidebar {
                display: none;
            }
            .main-content {
                width: 100%;
                height: auto;
                overflow: visible;
                display: block;
            }
            .horizontal-steps {
                width: 100%;
                justify-content: center;
                padding: 10px;
                overflow-x: auto;
                white-space: nowrap;
            }
            .scroll-content {
                height: auto;
                overflow-y: visible;
                padding-bottom: 50px;
                padding-left: 20px;
                padding-right: 20px;
            }
            .mobile-close-btn {
                display: block;
                position: absolute;
                top: 20px;
                left: 20px;
                z-index: 1001;
            }
        }

        /* Specific Mobile Phone styles (sm) */
        @media (max-width: 576px) {
            .btn-home {
                width: 100%; /* Full width button on phones */
                text-align: center;
                padding: 15px 20px;
            }
            .scroll-content {
                padding-left: 15px;
                padding-right: 15px;
            }
            .horizontal-steps {
                justify-content: flex-start; /* Align start to allow scrolling if steps overflow */
            }
        }

        /* Hide Base Header/Footer on Mobile Success Page for clean look */
        @media (max-width: 768px) {
            .hero-navbar, .main-footer, footer {
                display: none !important;
            }
            /* Ensure content top padding is removed if header is gone */
            .reservation-container {
                margin-top: 0;
            }
        }
    </style>
{% endblock %}

{% block main %}
    <div class="reservation-container">

        <aside class="sidebar">
            <div class="sidebar-content">
                <a href="{{ path('app_accueil') }}" class="btn-home-return">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Retour à l'accueil
                </a>
            </div>

            <div class="sidebar-recap">

            </div>
        </aside>

        <main class="main-content" style="display:flex; flex-direction:column;">


            <div class="scroll-content">
                <div style="text-align: center; margin-top: 50px;">
                    <h1 style="color: #2e7d32;">Merci !</h1>
                    <p style="font-size: 1.2rem; margin-top: 20px;">
                        Votre réservation a bien été prise en compte.<br>
                        Vous allez recevoir un email de confirmation.
                    </p>

                    <div style="margin-top: 40px; text-align: left; max-width: 600px; margin-left: auto; margin-right: auto; background: #f9f9f9; padding: 20px; border-radius: 8px;">
                        <h3 style="color: #103A21; border-bottom: 1px solid #ddd; padding-bottom: 10px;">Récapitulatif</h3>
                        <p><strong>Nom :</strong> {{ clientInfo.nom }} {{ clientInfo.prenom }}</p>
                        <p><strong>Email :</strong> {{ clientInfo.email }}</p>
                        <p><strong>Téléphone :</strong> {{ clientInfo.phone }}</p>
                        <p><strong>Adresse :</strong> {{ clientInfo.adresse }}</p>
                        <hr style="border:0; border-top:1px solid #eee; margin: 15px 0;">
                        <p><strong>Date :</strong> {{ reservationDate|date('d/m/Y') }} à {{ reservationTime|date('H:i') }}</p>
                        <p><strong>Services :</strong></p>
                        <ul>
                            {% for s in selectedServices %}
                                <li>{{ s.nom }}</li>
                            {% endfor %}
                        </ul>
                        <p style="font-size: 1.2rem; font-weight: bold; margin-top: 15px; color: #103A21;">Total : {{ totalPrice }} €</p>
                    </div>

                    <div style="margin-top: 10px;">
                        <button class="btn-home" onclick="window.location.href='{{ path('app_accueil') }}'">
                            Retour à l'accueil
                        </button>
                    </div>

                </div>
            </div>
        </main>
    </div>
{% endblock %}
