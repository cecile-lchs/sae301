{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Réservation #{{ reservation.id }}{% endblock %}

{% block main %}
    <div class="dashboard-container">
        <main class="dashboard-main p-4">
            <div class="mb-4">
                <a href="{{ path('admin_reservation_details', {id: reservation.id}) }}" class="text-decoration-none text-muted">
                    &larr; Retour aux détails
                </a>
            </div>

            <div class="bg-white rounded-3 shadow-sm p-5 mx-auto" style="max-width: 600px;">
                <h2 class="fw-bold mb-4">Modifier la réservation #{{ reservation.id }}</h2>

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="{{ path('admin_reservation_details', {id: reservation.id}) }}" class="btn btn-light">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </main>
    </div>
{% endblock %}
