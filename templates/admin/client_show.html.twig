{% extends 'admin/base.html.twig' %}

{% block main %}
    <style>

        /* Settings Button (Header) */
        .settings-btn {
            width: 48px;
            height: 48px;
            background-color: var(--bs-primary, #0d6efd);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }
        .settings-btn:hover {
            transform: rotate(90deg);
            background-color: #0b5ed7;
        }
        .settings-btn i {
            font-size: 1.5rem;
        }
    </style>
    <main class="dashboard-main bg-light">
{#    <header class="dashboard-header d-flex justify-content-between align-items-center bg-white border-bottom p-4">#}
{#        <h2>Clients</h2>#}
{#        <a href="{{ path('admin_parametres') }}" class="text-decoration-none">#}
{#            <div class="settings-btn">#}
{#                <i class="bi bi-gear-fill"></i>#}
{#            </div>#}
{#        </a>#}
{#    </header>#}
        <div class="mb-4">
            <a href="{{ path('admin_client') }}" class="text-decoration-none text-muted d-flex align-items-center gap-2">
                <i class="bi bi-arrow-left"></i> Retour aux clients
            </a>
        </div>
    <div class="container py-4">
    <div class="row">
        <!-- Left Column: Info -->
        <div class="col-md-5 border-end">
            <div class="text-center mb-4">
                <div class="bg-primary-subtle text-primary rounded-circle d-flex justify-content-center align-items-center fw-bold mx-auto mb-3"
                     style="width: 80px; height: 80px; font-size: 1.5rem;">
                    {{ client.prenom|slice(0,1) }}{{ client.nom|slice(0,1) }}
                </div>
                <h4 class="fw-bold mb-1">{{ client.prenom }} {{ client.nom }}</h4>
                <p class="text-muted small">Client depuis {% if client.reservations|length > 0 %}
                        {{ client.reservations|first.rendezVous.date|date('Y') }}
                    {% else %}
                        —
                    {% endif %}</p>
                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Actif</span>
            </div>

            <h6 class="fw-bold text-uppercase text-muted small mb-3">Coordonnées</h6>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-envelope me-2 text-primary"></i> {{ client.email }}</li>
                <li class="mb-2"><i class="bi bi-telephone me-2 text-primary"></i> {{ client.telephone }}</li>
                <li class="mb-2"><i class="bi bi-geo-alt me-2 text-primary"></i> {{ client.adresse }}</li>
            </ul>
        </div>

        <!-- Right Column: History -->
        <div class="col-md-7 ps-md-4">
            <h6 class="fw-bold text-uppercase text-muted small mb-3">Historique des Réservations</h6>
            <div class="list-group list-group-flush">
                {% for res in client.reservations %}
                    <div class="list-group-item px-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                {# Services : on map les objets pour obtenir le nom #}
                                <div class="fw-bold">{{ res.service|map(s => s.nom)|join(', ') }}</div>

                                {# Date du rendez-vous #}
                                <div class="small text-muted">
                                    {{ res.rendezVous ? res.rendezVous.date|date('d M Y') : '—' }}
                                </div>
                            </div>

                            {# Statut de la réservation #}
                            <span class="badge bg-light text-dark border">
                {{ res.status }}
            </span>
                        </div>
                    </div>
                {% else %}
                    <p class="small text-muted">Aucune réservation.</p>
                {% endfor %}
            </div>

            <div class="mt-4 pt-3 border-top">
                <h6 class="fw-bold text-uppercase text-muted small mb-2">Commentaires</h6>
                <p class="small text-muted bg-light p-3 rounded">
                    {{ client.notes ?? 'Aucune note.' }}
                </p>
            </div>
        </div>
    </div>
</div>
</main>
</div>
{% endblock %}
