{% extends 'base.html.twig' %}

{% block title %}Actualités {% endblock %}

{% block main %}
    <style>
        .actualite-container {
            margin-top: 140px; /* Espacer plus entre la barre de navigation et le titre */
        }

        .article-card {
            cursor: pointer;
            position: relative;
            overflow: hidden;
            border-radius: 20px; /* Ensure corners are rounded for the overflow */
        }


        .article-card img {
            transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .article-card:hover img {
            transform: scale(1.05);
        }

        .article-card h4 {
            transition: color 0.3s ease;
        }

        .article-card:hover h4 {
            color: #FFA500; /* Change title color on hover */
        }

        /* Stretched Link Technique using CSS in HTML as requested */
        .article-card .read-more::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
        }

    </style>
    <main class="container actualite-container">

        <!-- Page Title -->
        <h1 class="article-title align-left">Nos articles</h1>
        <p class="article-subtitle align-left">Garder un jardin propre et agréable demande du temps, de l’énergie et un vrai savoir-faire.</p>

        <div class="cards-grid">
            <div class="article-card">
                <img src="{{ asset('images/article1.png') }}" alt="Article 1">
                <div class="card-content">
                    <h4>Pourquoi un entretien régulier est essentiel pour garder un jardin en bonne santé</h4>
                    <div class="card-footer">
                        <span class="date">14 Mars, 2025</span>
                        <a href="{{ path('app_article1') }}" class="read-more">Lire plus &gt;</a>
                    </div>
                </div>
            </div>
            <div class="article-card">
                <img src="{{ asset('images/article2.png') }}" alt="Article 2">
                <div class="card-content">
                    <h4>Pourquoi un entretien régulier est essentiel pour garder un jardin en bonne santé</h4>
                    <div class="card-footer">
                        <span class="date">14 Mars, 2025</span>
                        <a href="{{ path('app_article2') }}" class="read-more">Lire plus &gt;</a>
                    </div>
                </div>
            </div>
            <div class="article-card">
                <img src="{{ asset('images/article3.avif') }}" alt="Article 1">
                <div class="card-content">
                    <h4>Comment attirer les pollinisateurs pour un jardin plus vivant</h4>
                    <div class="card-footer">
                        <span class="date">14 Mars, 2025</span>
                        <a href="{{ path('app_article3') }}" class="read-more">Lire plus &gt;</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
