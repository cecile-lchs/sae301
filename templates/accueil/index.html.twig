                name: "BERNARD Sophie",
                date: "28/08/2025",
                img: "{{ asset('images/accueil_avis_pp.jpg') }}",
                bg: "{{ asset('images/accueil_presentation.png') }}"
            }
        ];

        let currentReviewIndex = 0;

        const carouselBg = document.getElementById('avis-carousel-bg');
        const reviewText = document.getElementById('review-text');
        const reviewName = document.getElementById('review-name');
        const reviewDate = document.getElementById('review-date');
        const reviewImg = document.getElementById('review-img');
        const prevBtn = document.getElementById('prev-review');
        const nextBtn = document.getElementById('next-review');

        function updateReview(index) {
            const review = reviews[index];
            carouselBg.style.backgroundImage = `url('${review.bg}')`;
            reviewText.innerText = review.text;
            reviewName.innerText = review.name;
            reviewDate.innerText = review.date;
            reviewImg.src = review.img;
        }

        prevBtn.addEventListener('click', () => {
            currentReviewIndex = (currentReviewIndex - 1 + reviews.length) % reviews.length;
            updateReview(currentReviewIndex);
        });

        nextBtn.addEventListener('click', () => {
            currentReviewIndex = (currentReviewIndex + 1) % reviews.length;
            updateReview(currentReviewIndex);
        });
    </script>
